        android:text=""
        app:layout_constraintLeft_toLeftOf="@+id/fio_name_label"
        app:layout_constraintTop_toTopOf="@+id/fio_tab_r_2_rb"

        />

    <TextView
        android:id="@+id/fio_tab_r_2_comment"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintLeft_toLeftOf="@+id/fio_comment_label"
        app:layout_constraintTop_toTopOf="@+id/fio_tab_r_2_rb" />

    <CheckBox
        android:id="@+id/fio_tab_r_3_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fio_tab_r_2_rb" />

    <TextView
        android:id="@+id/fio_tab_r_3_id"
