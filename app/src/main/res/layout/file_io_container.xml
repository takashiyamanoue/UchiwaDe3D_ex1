        android:layout_height="wrap_content"
        android:text="."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fio_tab_r_1_rb" />

    <TextView
        android:id="@+id/fio_tab_r_2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintLeft_toLeftOf="@+id/fio_id_label"
        app:layout_constraintTop_toTopOf="@+id/fio_tab_r_2_rb"

        />

    <TextView
        android:id="@+id/fio_tab_r_2_name"
        android:layout_width="100dp"
