<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/save_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fio_selected_field"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="_"
        app:layout_constraintLeft_toRightOf="@+id/save_name_label"
        app:layout_constraintTop_toTopOf="@+id/save_name_label" />

    <EditText
        android:id="@+id/fio_name_field"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@+id/fio_selected_field"
        app:layout_constraintTop_toTopOf="@+id/save_name_label" />

    <Button
        android:id="@+id/fio_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        app:layout_constraintLeft_toRightOf="@+id/fio_name_field"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fio_load_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load"
        app:layout_constraintLeft_toRightOf="@+id/fio_save_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fio_select_label"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fio_name_field" />

    <TextView
        android:id="@+id/fio_id_label"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="No."
        app:layout_constraintLeft_toRightOf="@+id/fio_select_label"
        app:layout_constraintTop_toBottomOf="@+id/fio_name_field" />

    <TextView
        android:id="@+id/fio_name_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="name"
        app:layout_constraintLeft_toRightOf="@+id/fio_id_label"
        app:layout_constraintTop_toTopOf="@+id/fio_select_label" />

    <TextView
        android:id="@+id/fio_comment_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="comments"
        app:layout_constraintLeft_toRightOf="@+id/fio_name_label"
        app:layout_constraintTop_toTopOf="@+id/fio_select_label"

        />

    <CheckBox
        android:id="@+id/fio_tab_r_0_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fio_name_label" />

    <TextView
        android:id="@+id/fio_tab_r_0_id"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/fio_id_label"
        app:layout_constraintTop_toBottomOf="@+id/fio_id_label"

        />


    <TextView
        android:id="@+id/fio_tab_r_0_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toLeftOf="@+id/fio_name_label"
        app:layout_constraintTop_toBottomOf="@+id/fio_id_label"

        />

    <TextView
        android:id="@+id/fio_tab_r_0_comment"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text=" "
        app:layout_constraintLeft_toLeftOf="@+id/fio_comment_label"
        app:layout_constraintTop_toBottomOf="@+id/fio_id_label" />

    <CheckBox
        android:id="@+id/fio_tab_r_1_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fio_tab_r_0_rb" />


    <TextView
        android:id="@+id/fio_tab_r_1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="@+id/fio_id_label"
        app:layout_constraintTop_toTopOf="@+id/fio_tab_r_1_rb"

        />

    <TextView
        android:id="@+id/fio_tab_r_1_name"
